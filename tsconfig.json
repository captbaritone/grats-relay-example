{
  "grats": {
    "nullableByDefault": true,
    "graphqlSchema": "./server/schema.graphql",
    "tsSchema": "./server/schema.ts"
  },
  "compilerOptions": {
    "plugins": [{ "name": "grats-ts-plugin" }],
    "types": ["node"],
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "esnext",
    "lib": ["esnext"],
    "strict": true,
    "jsx": "preserve"
  }
}
